const marks = [80, 70, 90, 60, 75]; // sample marks

// Compute the average
let sum = 0;
for (let i = 0; i < marks.length; i++) {
  sum += marks[i];
}
const avg = sum / marks.length;

// Determine the grade based on the average
let grade;
if (avg < 60) {
  grade = "F";
} else if (avg < 70) {
  grade = "D";
} else if (avg < 80) {
  grade = "C";
